<%- include("header.ejs") %>
    <main>
      <form action="/posts" method="post" class="create_form">
        <h2>Create Post</h2>
        <div class="input_holder">
          <label for="username">Username</label>
          <input
            type="text"
            placeholder="Enter username"
            name="username"
            id="username"
            required
          />
        </div>
        <div class="input_holder">
          <label for="caption">Caption</label>
          <input
            type="text"
            placeholder="Enter caption"
            name="caption"
            id="caption"
          />
        </div>
        <div class="input_holder">
          <label for="image_address">Image Address</label>
          <textarea
            name="img"
            id="image_address"
            placeholder="Enter URL"
            required
            rows="5"
          ></textarea>
        </div>

        <button>Submit</button>
      </form>
    </main>
  </body>
</html>
